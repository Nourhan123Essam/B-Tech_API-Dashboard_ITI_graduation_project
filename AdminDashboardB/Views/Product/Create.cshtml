
@model DTOsB.Product.ProductCreateOrUpdateDto

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

@{
    ViewData["Title"] = "Create";
    var categories = ViewBag.Categories as List<DTOsB.Category.GetAllCategoriesDTO>;
}

<div class="container my-5 p-4  shadow rounded col-md-8">
   @*  <form asp-action="Index" method="get">
        <select name="selectedLanguageId" onchange="this.form.submit()">
            <option value="">Select Language</option>
            @foreach (var lang in ViewBag.AvailableLanguages)
            {
                <option value="@lang.Value">
                    @lang.Text
                </option>
            }
