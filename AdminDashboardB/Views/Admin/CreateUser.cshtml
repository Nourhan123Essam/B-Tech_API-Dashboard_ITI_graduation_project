@{
}

<h2 class="text-center mb-4">CreateUser</h2>

<div class="d-flex justify-content-center">
    <form asp-action="CreateUser" method="post" class="p-5 border rounded shadow-sm bg-light" style="max-width: 600px; width: 100%;">
        <div class="form-row">
            <div class="form-group ">
                <label asp-for="UserName" class="font-weight-bold"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
             <label asp-for="UserType" class="font-weight-bold">UserType</label>
             <select asp-for="UserType" class="form-control">
             <option value="User">User</option>
             <option value="Admin">Admin</option>
            </select>
          <span asp-validation-for="UserType" class="text-danger"></span>
           </div>
         
        </div>

        <div class="form-group ">
            <label asp-for="Email" class="font-weight-bold"></label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <label asp-for="Password" class="font-weight-bold"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group ">
            <label asp-for="PhoneNumber" class="font-weight-bold"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

      <div class="form-row">
    <div class="form-group col-md-4">
        <label asp-for="Address" class="font-weight-bold"></label>
        <input asp-for="Address" class="form-control" placeholder="Enter your address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="City" class="font-weight-bold"></label>
        <input asp-for="City" class="form-control" placeholder="Enter your city" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">
        <label asp-for="Country" class="font-weight-bold"></label>
        <input asp-for="Country" class="form-control" placeholder="Enter your country" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
</div>


        <div class="form-row">
            <div class="form-group  ">
                <label asp-for="PostalCode" class="font-weight-bold"></label>
                <input asp-for="PostalCode" class="form-control" placeholder="Enter postal code" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">Create</button>
        </div>
    </form>
</div>


@section Scripts {
                    <partial name="_ValidationScriptsPartial" />
}