﻿
@model IEnumerable<DTOsB.Order.OrderDTO.SelectOrderBDTO>

@{
    ViewData["Title"] = "Index";
}


<div class="container my-5 shadow p-4 rounded">

    <h2 class="shadow rounded-3 bg-dark mb-5 mt-4 rounded p-1 col-12 col-md-3 text-center text-light fw-bold ">All Orders</h2>
    <div class="table-responsive shadow rounded-3">
       @*  <div>
            <a asp-controller="Order" asp-action="Add" class="btn btn-outline-warning">
                <i class="fa-solid fa-pen-to-square"></i> Add Order
            </a>
        </div> *@
        <table class="table table-hover text-center align-middle">
            <thead class="table-dark shadow">
                <tr>
                    <th>ID</th>
                    <th>Ordered Date</th>
                    <th>Total Price</th>
                    <th>Current Status</th>
                    <th>Shipped Cost</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var order in Model)
                {

                    <tr>
                        <td>Id</td>
                        <td>@order.OrderDate</td>
                        <td>@order.TotalPrice</td>
                        <td>@order.CurrentStatus</td>
                        <td>@(order.ShippingCost == 0 ? "22" : order.ShippingCost.ToString())</td>

                        <td>
                            <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>

                            <a asp-controller="Order" asp-action="CancelOrder" asp-route-id="@order.Id" class="btn btn-outline-danger">
                                <i class="fa-solid fa-pen-to-square"></i> Cancel
                            </a>

                            <a asp-controller="Order" asp-action="DetailsOfOrder" asp-route-id="@order.Id" class="btn btn-outline-info">
                                <i class="fa-solid fa-pen-to-square"></i> Details
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>